<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viper.javaaptilearner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Java_Basics"
            android:label="@string/title_activity_java__basics"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viper.javaaptilearner.MainActivity" />
        </activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".TrainActivity" />
        <activity android:name=".AgesActivity" />
        <activity android:name=".TimeActivity" />
        <activity android:name=".AverageActivity" />
        <activity android:name=".CreditsActivity"></activity>
    </application>

</manifest>